<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academia_academia_form" model="ir.ui.view">
        <field name="name">academia.academia.form</field>
        <field name="model">academia.academia</field>
        <field name="arch" type="xml">
            <form string="Academiaa">
                <header>
                </header>
                <sheet>
                    <div class="oe_inline">
                        <newline />
                        <separator string="Informacion Personal" />
                        <!-- <field name="photo" widget="image" class="oe_avatar oe_left" style="max-width:100px;max-height:117px;" /> -->
                        <div class="oe_title">
                            <group>
                                <field name="name" placeholder="Nombres" nolabel="1"/>
                                <br />
                                <field name="description" nolabel="1"/>
                                <br />
                                <field name="active" nolabel="1"/>
                                <br />
                                <!-- <field name="idioma"/> -->
                            </group>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_academia_academia_tree" model="ir.ui.view">
        <field name="name">academia.academia.tree</field>
        <field name="model">academia.academia</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="description" />
                <field name="active" />
            </tree>
        </field>
    </record>
    <record id="action_academia_academia" model="ir.actions.act_window">
        <field name="name">AcademiA</field>
        <field name="res_model">academia.academia</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="academia_menu"
        name="ACADEMIA"
        action="academia.action_academia_academia"
        sequence=""/>
    
</odoo>
